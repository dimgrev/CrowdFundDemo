<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Open Fund</title>
    <link rel="icon" type="image/png" sizes="32x32" href="https://i.ibb.co/7z1mqPN/fundico2.png">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.13.0/css/all.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.13.0/css/v4-shims.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark box-shadow mb-3 layout-navbar">
            <div class="container layout-container-edit ">
                <a class="navbar-brand " asp-controller="Home" asp-action="Index"><img src="~/images/OpenFund3.png" style="height:43px" asp-append-version="true"></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Client" asp-action="Client">Clients</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Project" asp-action="Project">Projects</a>
                        </li>
                        <li class="nav-item form-inline d-md-inline-block">
                            <input class="form-control mr-sm-1" id="search-general-input" type="search" placeholder="Search" aria-label="Search">
                            <button class="btn btn-outline-success  mr-sm-1 d-none  d-md-inline-block" id="search-general" type="submit">Search</button>
                        </li>
                    </ul>
                </div>
                <button id="create-container" class="navbar-toggler d-block custom-navbar-toggler">
                    <i class="fa fa-plus fafa-plus-layout"></i>
                </button>

                <div id="effect-container" class="navbar-create-btn shadow rounded custom-navbar-create-btn" >

                    <button onclick="location.href = '/Project/Create';" class="btn  create-btn custom-create-btn " type="submit" >
                        Create new Project
                    </button>

                    <button onclick="location.href = '/Client/Create';" class="btn create-btn custom-create-btn" type="submit">
                        Create new Client
                    </button>

                </div>
            </div>
        </nav>
    </header>
    <div class="container" style="margin-top:65.75px;max-width: 100vw;padding: 0;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="footer text-muted bg-dark">
        <div class="container">
            <div class="row">
                <div class="col-8 col-md-10">
                    &copy; 2020 - CrowdFund - <a asp-area="" asp-controller="Home" asp-action="Privacy" style="color:#eee;">Privacy</a>
                </div>
                <div class="col-4 col-md-2 d-flex justify-content-end">
                    <div class="mr-sm-2 ml-sm-2">
                        <a href="https://twitter.com/" target="_blank">
                            <img src="https://img.icons8.com/metro/25/eeeeee/twitter.png" />
                        </a>
                    </div>
                    <div class="mr-sm-2 ml-sm-2">
                        <a href="https://youtube.com/" target="_blank">
                            <img src="https://img.icons8.com/ios-glyphs/25/eeeeee/youtube-squared.png" />
                        </a>
                    </div>
                    <div class="mr-sm-2 ml-sm-2">
                        <a href="https://facebook.com/" target="_blank">
                            <img src="https://img.icons8.com/ios-filled/25/eeeeee/facebook-new.png" />
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

